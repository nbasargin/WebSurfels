{
    "compilerOptions": {
        "strictNullChecks": true,
        "module": "commonjs",
        "moduleResolution": "node",
        "target": "es2017",
        "noImplicitAny": false,
        "sourceMap": true,
        "outDir": "lib",
        "declaration": true,
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2018",
            "dom"
        ],
        "types": [
            "webgl2",
            "jest"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": ["node_modules", "**/*.spec.ts"]
}
